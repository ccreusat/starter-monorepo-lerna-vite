{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "1.13.2",
  "npmClient": "pnpm",
  "command": {
    "version": {
      "allowBranch": [
        "main",
        "develop",
        "develop*"
      ],
      "message": "chore(release): publish"
    },
    "publish": {
      "ignoreChanges": [
        "**/node_modules/**",
        "**/.npmignore",
        "**/*.md"
      ]
    }
  }
}
